@model YachtSalesIndexViewModel

@{
    ViewData["Title"] = "Index";
    bool isLogged = (bool)ViewData["isLogged"];
}

@* <h1>Oferty sprzedaży jachtów</h1>
 *@
<div class="d-flex align-items-center">
    <h1 class="me-3">Oferty sprzedaży jachtów</h1>
    @if (isLogged)
    {
        <a asp-action="Create" class="btn btn-outline-success">
            ➕ Dodaj
        </a>
    }
</div>
@if (isLogged)
{
    <h2>Moje oferty sprzedaży</h2>
   @*  <p><a asp-action="Create">Dodaj nową ofertę</a></p> *@
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.UserSales.First().Yacht.name)</th>
                <th>@Html.DisplayNameFor(model => model.UserSales.First().price)</th>
                <th>@Html.DisplayNameFor(model => model.UserSales.First().currency)</th>
                <th>@Html.DisplayNameFor(model => model.UserSales.First().location)</th>
                <th>@Html.DisplayNameFor(model => model.UserSales.First().notes)</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.UserSales.Any())
            {
                @foreach (var sale in Model.UserSales)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => sale.Yacht.name)</td>
                        <td>@Html.DisplayFor(modelItem => sale.price)</td>
                        <td>@Html.DisplayFor(modelItem => sale.currency)</td>
                        <td>@Html.DisplayFor(modelItem => sale.location)</td>
                        <td>@Html.DisplayFor(modelItem => sale.notes)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@sale.Id">Edytuj</a> |
                            <a asp-action="Details" asp-route-id="@sale.Id">Szczegóły</a> |
                            <a asp-action="Delete" asp-route-id="@sale.Id">Usuń</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <strong>Brak dostępnych ofert sprzedaży jachtów.</strong><br />
                        Sprawdź później lub <a asp-action="Create">dodaj swoją ofertę</a>!
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Dostępne oferty sprzedaży</h2>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OtherSales.First().Yacht.name)</th>
                <th>@Html.DisplayNameFor(model => model.OtherSales.First().price)</th>
                <th>@Html.DisplayNameFor(model => model.OtherSales.First().currency)</th>
                <th>@Html.DisplayNameFor(model => model.OtherSales.First().location)</th>
                <th>@Html.DisplayNameFor(model => model.OtherSales.First().notes)</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.OtherSales.Any())
            {
                @foreach (var sale in Model.OtherSales)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => sale.Yacht.name)</td>
                        <td>@Html.DisplayFor(modelItem => sale.price)</td>
                        <td>@Html.DisplayFor(modelItem => sale.currency)</td>
                        <td>@Html.DisplayFor(modelItem => sale.location)</td>
                        <td>@Html.DisplayFor(modelItem => sale.notes)</td>
                        <td> <a asp-action="Details" asp-route-id="@sale.Id">Szczegóły</a> </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">
                        <strong>Brak dostępnych ofert sprzedaży jachtów.</strong><br />
                        Sprawdź później lub <a asp-action="Create">dodaj swoją ofertę</a>!
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Dostępne oferty sprzedaży</h2>
    @if (Model.OtherSales == null || !Model.OtherSales.Any())
    {
        <p class="text-center text-muted">Niestety, w tej chwili nie mamy dostępnych ofert sprzedaży. Może jutro pojawi się coś ciekawego? 🌊</p>
    }
    else
    {
        <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OtherSales.First().Yacht.name)</th>
